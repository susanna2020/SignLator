<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00334E"
    tools:context=".textToSign">


    <Button
        android:id="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="32dp"
        android:background="@android:drawable/ic_btn_speak_now"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toConvert" />

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_media_play"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toConvert"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/toConvert"
        android:layout_width="376dp"
        android:layout_height="75dp"
        android:layout_marginBottom="80dp"
        android:layout_x="0dp"
        android:layout_y="607dp"
        android:background="#FFFFFF"
        android:hint="Type text here"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/app_blue"
        android:textColorHint="@color/app_blue"
        android:textCursorDrawable="@color/app_blue"
        android:textIsSelectable="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/converter"
        android:layout_width="378dp"
        android:layout_height="557dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:lines="6"
        android:maxLines="6"
        android:textSize="100dp"
        app:layout_constraintBottom_toTopOf="@+id/toConvert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744" />
</androidx.constraintlayout.widget.ConstraintLayout>

